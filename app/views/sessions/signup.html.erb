<%= form_for @user, :url => {:action =>'new_user'}, :html => {:method => "post"} do |f| %>
    <div class="field">
      <%= f.label :name, "Imię" %><br>
      <%= f.text_field :name,  :input_html => {:id=>'name'} %>
    </div>
    <div class="field">
      <%= f.label :password, "Hasło" %><br>
      <%= f.password_field :password, :input_html => {:id=>'password'} %>
    </div>
    <div class=" input-group">
      <%= f.label :email %><br>
      <%= f.text_field :email, :input_html => {:id=>'email'} %>
    </div>
    <div class="field">
      <%= f.label :address, "Adres" %><br>
      <%= f.text_field :address %>
    </div>
    <div class="field">
      <%= f.label :phone, "Numer telefonu" %><br>
      <%= f.text_field :phone %>
    </div>
    <div class="actions">
      <%= f.submit 'Zarejestruj', :class => 'btn btn-primary'%>
    </div>
<% end %>