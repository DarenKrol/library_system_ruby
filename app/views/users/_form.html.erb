<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> Użytkownik został zablokowany:</h2>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class=" input-group">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :phone, "Numer telefonu" %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :is_admin, "Admin?" %><br>
    <%= f.check_box :is_admin %>
  </div>
  <div class="actions">
    <%= f.submit 'Zaloguj', :class => 'btn btn-primary' %>
  </div>
<% end %>
