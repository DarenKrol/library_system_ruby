<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> Użytkownik został zablokowany:</h2>
      <ul>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Imię" %><br>
    <%= f.text_field :name, class: "form-control", placeholder: "Imię" %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
  </div>
  <div class="form-group">
    <%= f.label :address, "Adres" %><br>
    <%= f.text_field :address, class: "form-control", placeholder: "Adres" %>
  </div>
  <div class="form-group">
    <%= f.label :phone, "Telefon" %><br>
    <%= f.text_field :phone, class: "form-control", placeholder: "Numer telefonu" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Zastosuj', :class => "btn btn-success" %>
  </div>
<% end %>