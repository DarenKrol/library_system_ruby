<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th><strong>Tytuł</strong></th>
      <th><strong>Opis</strong></th>
      <th><strong>Autor</strong></th>
      <th><strong>Isbn</strong></th>
      <th><strong>Status</strong></th>
    </tr>
  </thead>
  <tbody>

    <tr>
      <td><%= @book.title %></td>
      <td><%= @book.description %></td>
      <td><%= @book.author %></td>
      <td><%= @book.isbn %></td>
      <% if @book.is_borrowed %>
      <td><span class="label label-danger">Zarezerwowana</span></td>
      <%else%>
      <td><span class="label label-success">Dostępna</span></td>
      <%end%>
    </table>

    <%if @current_user.is_admin %>
    <%= link_to 'Edycja', edit_book_path(@book), :class => "btn btn-danger", :style => "color: #ffffff" %> | 
    <%end%>
    <%= link_to 'Powrót', books_path, :class => "btn btn-warning", :style => "color: #ffffff" %>
